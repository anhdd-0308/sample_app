<% provide :title, t(".heading") %>
<div class="center jumbotron">
  <h1><%= t(".welcome") %></h1>
  <h2>
    <%= t(".intro") %>
    <%= link_to t(".tutor"), Settings.url.rails_home_url %>
    <%= t(".app") %>
  </h2>
  <% unless logged_in? %>
    <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
<%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200px"), "https://rubyonrails.org/" %>
